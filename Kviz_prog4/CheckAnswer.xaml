        <Label Name="label_answer4" Content="Alabama"  Grid.Column="1" Grid.Row="2" Margin="20" Padding="20" FontSize="30"  MouseLeftButtonDown="label_MouseLeftButtonDown"/>
        <Label Name="timer" Content="60" Grid.Column="1" HorizontalAlignment="Left" Margin="238,90,0,0" VerticalAlignment="Top" Height="55" Width="142" FontSize="20" Grid.RowSpan="2"/>

    </Grid>
